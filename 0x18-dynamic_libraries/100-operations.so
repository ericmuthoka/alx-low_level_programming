#include <stdio.h>

int add(int a, int b) {
	return a + b;
}

int sub(int a, int b) {
	return a - b;
}

int mul(int a, int b) {
	return a * b;
}

int div(int a, int b) {
	return a / b;
}

int mod(int a, int b) {
	return a % b;
}

int main() {
	gcc -shared -fPIC -o libhello.so add.c sub.c mul.c div.c mod.c

		import ctypes
		libhello = ctypes.cdll.LoadLibrary("libhello.so")

		a = random.randint(-111, 111)
		b = random.randint(-111, 111)
		print("{} + {} = {}".format(a, b, libhello.add(a, b)))
		print("{} - {} = {}".format(a, b, libhello.sub(a, b)))
		print("{} x {} = {}".format(a, b, libhello.mul(a, b)))
		print("{} / {} = {}".format(a, b, libhello.div(a, b)))
		print("{} % {} = {}".format(a, b, libhello.mod(a, b)))
}

